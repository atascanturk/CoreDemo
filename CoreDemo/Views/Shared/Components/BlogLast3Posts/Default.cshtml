@using EntityLayer.Concrete
@model List<Blog>


    <div class="col-lg-4 footer-grid-agileits-w3ls text-left">

        <div class="tech-btm">
            <h3>Son Gönderiler</h3>
            @foreach (var blog in Model)
            {
                <div class="blog-grids row mb-3">
                    <div class="col-md-5 blog-grid-left">
                        <a href="/Blog/BlogReadAll/@blog.Id">
                            <img src="~/CoreBlogTemplate/images/4.jpg" class="card-img-top img-fluid" alt="">
                        </a>
                    </div>
                    <div class="col-md-7 blog-grid-right">

                        <h5>
                            <a href="/Blog/BlogReadAll/@blog.Id">@(blog.Content.Count() <= 130 ? blog.Content :blog.Content.Substring(0,blog.Content.Substring(0,130).LastIndexOf(" "))+"...")</a>
                        </h5>
                        <div class="sub-meta">
                            <span>
                                <i class="far fa-clock"></i> @(blog.CreatedDate.ToString("ddd-MM-yyyy"))
                            </span>
                        </div>
                    </div>

                </div>
            }

            </div>
    </div>

