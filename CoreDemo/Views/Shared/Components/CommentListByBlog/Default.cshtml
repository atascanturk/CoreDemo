@using EntityLayer.Concrete
@model List<Comment>


<div class="comment-top">
    @if (Model.Count() > 0)
    {
        <h4>Yorumlar</h4>
    }
    else
    {
        <h6>Henüz Hiç Yorum Yapılmamış, İlk Yorumu Siz Yazın.</h6>
    }
    @foreach (var comment in Model)
    {
        <div class="media">
            <img src="~/CoreBlogTemplate/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@comment.UserName</h5>
                <p>
                    @comment.Content
                </p>

            </div>
        </div>
    }

</div>