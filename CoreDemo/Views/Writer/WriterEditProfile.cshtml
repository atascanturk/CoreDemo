@model EntityLayer.Concrete.Writer


@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}



@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
            {


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgilerini Düzenle</h4>
           <input type="hidden" class="form-control" name="Id" value="@Model.Id" >
           <input type="hidden" class="form-control" name="CityId" value="@Model.CityId" >
            <form class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad </label>
                    <input type="text" class="form-control" id="exampleInputName1" value="@Model.Name" name="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">E-Posta</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" value="@Model.Mail" name="Mail">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" class="form-control" value="@Model.Password" id="exampleInputPassword4" Name="Password">
                </div>

                <div class="form-group">
                    <label>Yazar Görsel</label>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkında</label>
                    <textarea class="form-control" id="exampleTextarea1" name="About" rows="4">@Model.About</textarea>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>
            }